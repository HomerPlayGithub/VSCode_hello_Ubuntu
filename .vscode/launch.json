{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C++ WSL",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/b.out.dSYM/Contents/Resources/DWARF/b.out",
        "args": ["-fThreading"],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "windows": {
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }, 
        "osx": {
            "MIMode": "lldb"
        },
        "preLaunchTask": "build"
    }
    ]
  }