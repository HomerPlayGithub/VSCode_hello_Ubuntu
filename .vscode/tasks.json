{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build", // 任务名称，与launch.json的preLaunchTask相对应
        "type": "shell",
        "command": "g++",
        "args": [
          "*.c",
          "-o a.out",
          "-std=c++17",
          "-I.",
          "-g",
          "-Wall"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      }
    ]
  }